<h2>Jobs</h2>
<ul>
{{#each jobs}}
  <li class="container">
    <div class="job-item"><a href="/jobs/{{this.id}}">{{title}}</a></div>
    <div class="job-item">{{company}}</div>
    <div class="job-item">{{type}}</div>
    <div class="job-item">{{description}}</div>
    <div class="job-item">{{salary}}</div>
    <div class="job-item">{{journeyType}}</div>
    <div class="job-item">{{vacancies}}</div>
    <form action="/jobs/{{this.id}}/delete" method="POST">
      <input type="submit" value="DELETE">
    </form>
  </li>
{{/each}}
</ul>