<h2>Sign up</h2>
<form method="POST" action="/auth/signup" class="uk-form-stacked">
    <div class="uk-margin">
        <input class="uk-input uk-form-blank uk-form-width-medium" type="email" placeholder="Email" required>
        <input class="uk-input uk-form-blank uk-form-width-medium" type="password" placeholder="Password" required>
    </div>
    
    {{#if messages.length}}
    <div class="uk-alert-danger" uk-alert>
        <a class="uk-alert-close" uk-close></a>
        <h3>Error</h3>
        <p>{{#each messages}}{{this}}{{/each}}</p>
    </div>
    {{/if}}
    <div class="field">
        <button class="uk-button uk-button-primary" type="submit">Signup</button>
    </div>
</form>