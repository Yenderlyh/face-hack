{{#if sessionFlash.message}}
    <div class="{{ sessionFlash.type }}" uk-alert>
        <a class="uk-alert-close" uk-close></a>
        <h3>{{ sessionFlash.messageTitle }}</h3>
        <p>{{ sessionFlash.message }}</p>
    </div>
{{/if}}
<div class="uk-position-relative uk-visible-toggle uk-light" uk-slideshow="animation: push; min-height: 300; max-height: 500">

    <ul class="uk-slideshow-items">
        <li>
            <div class="uk-position-cover uk-animation-kenburns uk-animation-reverse uk-transform-origin-center-left">
                <img src="/assets/pics/grupoiron1.JPG" alt="" uk-cover>
            </div>
        </li>
        <li>
            <div class="uk-position-cover uk-animation-kenburns uk-animation-reverse uk-transform-origin-top-right">
                <img src="/assets/pics/ironenter.JPG" alt="" uk-cover>
            </div>
        </li>
        <li>
            <div class="uk-position-cover uk-animation-kenburns uk-animation-reverse uk-transform-origin-bottom-left">
                <img src="/assets/pics/ironmeet.jpg" alt="" uk-cover>
            </div>
        </li>
    </ul>

    <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slideshow-item="previous"></a>
    <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slideshow-item="next"></a>

</div>
<div>
    <h2>Share and find all the Webdev and UX/UI jobs with your Ironhack mates</h2> 
</div>
<h3>Jobs Available</h3>

<div class="uk-grid-small uk-flex-wrap uk-flex-top uk-flex-row uk-flex-around@m uk-flex-around@l uk-flex-around@xl uk-margin-top uk-margin-bottom" uk-grid="masonry: true">
{{#each jobs}}
    <div class="uk-card uk-card-default uk-width-1-2@s uk-width-1-3@m uk-width-1-4@l uk-width-1-6@xl">
        <div class="uk-card-header">
            <div class="uk-grid-small uk-flex-middle" uk-grid>
                <div class="uk-width-expand">
                    <h3 class="uk-card-title uk-margin-remove-bottom">{{title}}</h3>
                    <p class="uk-text-meta uk-margin-remove-top"><time datetime="{{../jobTime}}">{{../jobTime}}</time></p>
                </div>
            </div>
        </div>
        <div class="uk-card-body">
            <p>{{description}}</p>
        </div>
        <div class="uk-card-footer">
            <a href="/jobs/{{id}}" class="uk-button uk-button-text">More info</a>
        </div>
        {{#if ../currentUser}}
            <form action="/jobs/{{id}}/apply" method="POST" class="uk-card-footer">
                <button class="uk-button uk-button-default uk-button-primary" type="submit">Apply</button>
            </form>
        {{/if}}        
    </div>
{{/each}}
</div>


